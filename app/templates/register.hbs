<form class="register-form" {{action 'authenticate' on='submit'}}>
    <div class="form-group">
        <label for="username">Email</label>
        {{input value=emailAddress placeholder='Enter Email ID' class='form-control' id="Username"}}
    </div>
    <div class="form-group">
        <label for="password">Password</label>
        {{input value=password placeholder='Enter Password' class='form-control' type='password' id="Password"}}
    </div>
    <div class="form-group">
        <label for="password">Confirm</label>
        {{input value=confirm placeholder='Confirm Password' class='form-control' type='password' id="Confirm"}}
    </div>
    <button type="submit" class="btn btn-default">Register</button>
</form>
{{#if errorMessage}}
    <div class="alert alert-danger">
        <strong>Login failed:</strong> {{errorMessage}}
    </div>
{{/if}}