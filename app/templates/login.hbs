<link rel='stylesheet prefetch' href='http://maxcdn.bootstrapcdn.com/font-awesome/4.2.0/css/font-awesome.min.css'>

<form class="login-form" {{action 'authenticate' on='submit'}}>
    <div class="form-group">
        <label for="username">Login</label>
      {{input value=emailAddress placeholder='Enter Login' class='form-control' id="Username"}}
    </div>
    <div class="form-group">
        <label for="password">Password</label>
      {{input value=password placeholder='Enter Password' class='form-control' type='password' id="Password"}}
    </div>
    <button type="submit" class="btn btn-default">Login</button>
</form>
{{#if errorMessage}}
    <div class="alert alert-danger">
        <strong>Login failed:</strong> {{errorMessage}}
    </div>
{{/if}}
